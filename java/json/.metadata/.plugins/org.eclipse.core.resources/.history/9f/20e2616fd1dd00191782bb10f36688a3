package com.hcl.decodejson;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.sql.Date;

import org.json.simple.JSONObject;
import org.json.simple.JSONValue;

public class DecodeJson {

	public static void main(String[] args) throws IOException {
		 FileReader fr=new FileReader("C:\\Users\\Coalesce\\Desktop\\employee2.json");    
         BufferedReader br=new BufferedReader(fr);   
         int i;    
         StringBuilder sb= new StringBuilder();
         while((i=br.read())!=-1){  
         sb.append((char)i);
         }  
         System.out.println(sb.toString());
         Object obj=JSONValue.parse(sb.toString());  
		    JSONObject jsonObject = (JSONObject) obj;  
		    
		    
		    int no=(Integer) jsonObject.get("empno");
		    String name = (String) jsonObject.get("empname");  
		    double salary = (Double) jsonObject.get("salary"); 
		    String band = (String) jsonObject.get("band");  
		    Date date = (Date) jsonObject.get("dateofjoin");    
		    System.out.println(no+" "+name+" "+salary+" "+band+" "+date); 
   }    

	}


